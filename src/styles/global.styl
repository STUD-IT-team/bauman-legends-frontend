@require 'scrollbars.styl'

html
    overflow-x hidden
    scrollable()

*
    box-sizing border-box

body
    margin 0
    padding 0
    width 100vw
    min-height 100vh
    position relative
    overflow-x hidden
    font-family Arial, monospace
    background #e7e7e7
    overflow-y hidden

#app
    width 100%
    height 100%

a
    text-decoration none
a:visited
    color inherit
